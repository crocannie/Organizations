<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.akarpenko.organisations.OrgAddActivityFragment"
    android:id="@+id/mylayout">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name_editText"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="Название" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/phone_editText"
        android:inputType="phone"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/name_editText"
        android:layout_alignParentStart="true"
        android:hint="Телефон" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/address_editText"
        android:layout_marginLeft="10dp"
        android:inputType="textPersonName|textPostalAddress"
        android:layout_below="@+id/phone_editText"
        android:layout_alignParentStart="true"
        android:hint="Адрес" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/mail_editText"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/address_editText"
        android:layout_alignEnd="@+id/addOrg"
        android:hint="Email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить"
        android:id="@+id/addOrg"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/mail_editText"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="map"
        android:id="@+id/map_button"
        android:layout_alignBottom="@+id/name_editText"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="call"
        android:id="@+id/call_button"
        android:layout_below="@+id/map_button"
        android:layout_alignStart="@+id/map_button"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mail"
        android:id="@+id/mailButton"
        android:layout_above="@+id/addOrg"
        android:layout_alignEnd="@+id/call_button"
        android:visibility="invisible" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="adr"
        android:id="@+id/address_button"
        android:layout_above="@+id/iMapButton"
        android:layout_toEndOf="@+id/mail_editText"
        android:visibility="invisible" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iMailButton"
        android:background="@drawable/email5"
        android:layout_alignTop="@+id/mail_editText"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iCallButton"
        android:background="@drawable/telephone5"
        android:layout_below="@+id/map_button"
        android:layout_alignEnd="@+id/map_button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iAddressButton"
        android:background="@drawable/google29"
        android:layout_below="@+id/phone_editText"
        android:layout_alignEnd="@+id/call_button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iMapButton"
        android:background="@drawable/facebook30"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/map_button" />

</RelativeLayout>
